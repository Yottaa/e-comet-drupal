            <fileset dir="${drupal.dir}/yottaa">
                <include name="**/*"/>
            </fileset>
            <fileset dir="${drupal.dir}/drupal-6/yottaa">
                <include name="**/*"/>
            </fileset>
        </scp>
    </target>

</project>
